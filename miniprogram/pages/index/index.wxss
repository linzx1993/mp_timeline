.page-header-image {
    position: relative;
    width: 100vw;
    height: 500rpx;
    border-radius: 8rpx;
}

.header-image {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    bottom: -60rpx;
    right:40rpx;
    border-radius: 8rpx;
}

/* 音频盒子 */
.audio-container {
    margin: 24rpx 32rpx;
    padding: 36rpx 24rpx;
    /* height: 160rpx; */
    background-color: #f6f6f6;
    border-radius: 8rpx;
}

.audio-title {
    font-size: 36rpx;
    font-weight: bold;
    line-height: 1;
}

.audio-author {
    margin-top: 12rpx;
    color: #8D8E99;
    font-size: 24rpx;
    line-height: 36rpx;
}

.audio-content {
    display: flex;
    justify-content: space-between;
}

.audio-line-container {
    margin-right: 48rpx;

    flex: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.audio-line {
    position: relative;
    margin: 24rpx 0 0 0;
    height: 4rpx;
    width: 100%;
    background-color: #ebedf0;
    border-radius: 2rpx;
}

.audio-underline {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    height: 4rpx;
    background-color: #8D8E99;
}

.audio-time {
    display: flex;
    justify-content: space-between;
    color: #8D8E99;
    font-size: 24rpx;
    width: 100%;
}

.audio-start {
    width: 48rpx;
    height: 48rpx;
}

/* =========正序倒序=========== */
.sort-order {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 0 32rpx;
    height: 32rpx;
    line-height: 1;
    font-size: 24rpx;
    color: #8D8E99;
}

.sort-order .sort-image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
}

.sort-order .sort-image.up {
    transform: rotate(180deg);
}
/* =========时间线=========== */
.time-info {
    padding: 12rpx 12rpx 0 0;
    text-align: right;
    color: #8D8E99;
    font-size: 24rpx;
    line-height: 36rpx;
}

.time-list {
    margin-top: 60rpx;
}

.time-container {
    margin-top: 12rpx;
    display: flex;
    padding: 32rpx;
    border-bottom: 1rpx solid #ee5f11;
    border-bottom: 1px solid #ebedf0;
}

.time-header-image {
    width: 80rpx;
    height: 80rpx;
    margin-right: 24rpx;
    border-radius: 12rpx;
}

.time-content {

}

.time-name {
    margin-bottom:12rpx;
    color: #ff571a;
    font-size: 32rpx;
    font-weight: bold;
}

.time-description {
    margin-bottom: 12rpx;
    color: #1b1c33;
    font-size: 28rpx;
    line-height: 36rpx;
}

.time-picture-list {
    display: flex;
    flex-wrap: wrap;
}

.time-picture {
    margin: 12rpx 12rpx 0 0;
    width: 180rpx;
    height: 180rpx;
}

.time-video {
    margin-top: 12rpx;
    width: 100%;
    height: 384rpx;
}

.time-date {
    margin-top: 12rpx;
    color: #8D8E99;
    font-size: 24rpx;
}

.comment-container {
    /* display: flex; */
    margin: 18rpx 12rpx 0 0;
    background-color: rgb(247, 247, 247);
    padding: 12rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    border-radius: 4rpx;
}
.comment-container .creater {
    font-weight: bold;
    flex: none;
    color: #ff571a;
}

.comment-container .text {
    margin-left: 8rpx;
    flex: auto;
    color: #1b1c33
}

.white-mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    background-color: rgba(255, 255, 255, .95);
    transition: opacity .5s;
    opacity: 0;
}
.white-mask.active {
    opacity: 1;
}

.right-menu {
    position: fixed;
    bottom: 128rpx;
    right: 32rpx;
    z-index: 2;
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    overflow: hidden;
    background-color: #fff;
    box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, .2);
    transition: all .5s;
}

.right-menu.active {
    transform: rotate(45deg);
    transition: all .5s;
}

.right-menu-image {
    width: 100%;
    height: 100%;
}