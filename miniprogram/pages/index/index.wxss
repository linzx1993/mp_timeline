.page-header-image {
    position: relative;
    width: 100vw;
    height: 500rpx;
    border-radius: 8rpx;
}

.header-image {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    bottom: -60rpx;
    right:40rpx;
    border-radius: 8rpx;
}

/* 音频盒子 */
.audio-container {
    margin: 24rpx 32rpx;
    padding: 36rpx 24rpx;
    /* height: 160rpx; */
    background-color: #f6f6f6;
    border-radius: 8rpx;
}

.audio-title {
    font-size: 36rpx;
    font-weight: bold;
    line-height: 1;
}

.audio-author {
    margin-top: 12rpx;
    color: #8D8E99;
    font-size: 24rpx;
    line-height: 36rpx;
}

.audio-content {
    display: flex;
    justify-content: space-between;
}

.audio-line-container {
    margin-right: 48rpx;

    flex: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.audio-line {
    margin: 24rpx 0 0 0;
    height: 4rpx;
    width: 100%;
    background-color: #ebedf0;
}

.audio-time {
    display: flex;
    justify-content: space-between;
    color: #8D8E99;
    font-size: 24rpx;
    width: 100%;
}

.audio-start {
    width: 48rpx;
    height: 48rpx;
}

.time-info {
    padding: 12rpx 12rpx 0 0;
    text-align: right;
    color: #8D8E99;
    font-size: 24rpx;
    line-height: 36rpx;
}

.time-list {
    margin-top: 60rpx;
}

.time-container {
    margin-top: 12rpx;
    display: flex;
    padding: 32rpx;
    border-bottom: 1rpx solid #ee5f11;
    border-bottom: 1px solid #ebedf0;
}

.time-header-image {
    width: 80rpx;
    height: 80rpx;
    margin-right: 24rpx;
    border-radius: 12rpx;
}

.time-content {

}

.time-name {
    margin-bottom:12rpx;
    color: #ff571a;
    font-size: 32rpx;
    font-weight: bold;
}

.time-description {
    margin-bottom: 12rpx;
    color: #1b1c33;
    font-size: 28rpx;
    line-height: 36rpx;
}

.time-picture-list {
    display: flex;
    flex-wrap: wrap;
}

.time-picture {
    margin: 12rpx 12rpx 0 0;
    width: 180rpx;
    height: 180rpx;
}

.time-date {
    margin-top: 12rpx;
    color: #8D8E99;
    font-size: 24rpx;
}

.comment-container {
    /* display: flex; */
    margin: 18rpx 12rpx 0 0;
    background-color: rgb(247, 247, 247);
    padding: 12rpx;
    font-size: 28rpx;
    line-height: 40rpx;
    border-radius: 4rpx;
}
.comment-container .creater {
    font-weight: bold;
    flex: none;
    color: #ff571a;
}

.comment-container .text {
    margin-left: 8rpx;
    flex: auto;
    color: #1b1c33
}